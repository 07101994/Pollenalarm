<Application
    x:Class="Pollenalarm.Frontend.Forms.UWP.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pollenalarm.Frontend.Forms.UWP"
    RequestedTheme="Light">
    <Application.Resources>
        <!-- Custom Colors -->
        <Color x:Key="PollenalarmBlue">#007bc2</Color>

        <!-- Define own brushes -->
        <SolidColorBrush
            x:Key="PollenalarmBlueColorBrush"
            Color="{StaticResource PrimaryBlue}" />
    </Application.Resources>
</Application>
