<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <!-- Inherit from the light Material Theme -->
    <style name="PollenalarmTheme" parent="android:Theme.Material">
        <!-- Override the app bar color -->
        <item name="android:colorPrimary">@color/pollenalarm_blue</item>

        <!-- Set status bar color -->
        <item name="android:statusBarColor">@color/pollenalarm_blue_dark</item>

        <!-- Override the color of UI controls -->
        <item name="android:colorAccent">@android:color/white</item>
    </style>
</resources>