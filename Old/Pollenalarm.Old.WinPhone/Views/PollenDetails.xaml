				<SplineDoubleKeyFrame KeySpline="1,0,1,1" KeyTime="0:0:0.5" Value="-473.937"/>
				<SplineDoubleKeyFrame KeyTime="0:0:1" Value="-472.5"/>
			</DoubleAnimationUsingKeyFrames>
