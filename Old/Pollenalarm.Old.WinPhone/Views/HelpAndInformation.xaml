            			<RichTextBox BorderThickness="0,10,0,0">
            				<Paragraph FontSize="24"><Run Text="Preis: " FontFamily="Segoe WP SemiLight" FontSize="29.333"/><Run Text="nur 0,99 €" FontFamily="Segoe WP SemiLight" FontSize="29.333">
            						<Run.Foreground>
            							<SolidColorBrush Color="{StaticResource PhoneContrastBackgroundColor}"/>
            						</Run.Foreground>
            					</Run></Paragraph>
            			</RichTextBox>
