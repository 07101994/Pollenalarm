        <shell:ApplicationBar IsMenuEnabled="True" IsVisible="True">
            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem
                    x:Name="appBarPromoCode"
                    Click="appBarPromoCode_Click"
                    Text="Promotionscode eingeben" />
            </shell:ApplicationBar.MenuItems>
            <shell:ApplicationBarIconButton
                x:Name="appbarContact"
                Click="appbarContact_Click"
                IconUri="/Assets/ApplicationBar/appbar.sendmessage.rest.png"
                Text="E-Mail Feedback" />
            <shell:ApplicationBarIconButton
                x:Name="appBarRate"
                Click="appBarRate_Click"
                IconUri="/Assets/ApplicationBar/appbar.favs.addto.rest.png"
                Text="App Bewerten" />
            <shell:ApplicationBarIconButton
                x:Name="appBarBuy"
                Click="appBarBuy_Click"
                IconUri="/Assets/ApplicationBar/appbar.cart.png"
                Text="Vollversion kaufen" />
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

</phone:PhoneApplicationPage>