            			<StackPanel Orientation="Horizontal" Margin="12,0,0,5">
            				<TextBlock Text="•" Foreground="{StaticResource PhoneBorderBrush}" Margin="7,0,-7,0" />
            				<TextBlock Text="Pollenvorhersage für die nächsten zwei Tage" Margin="15,0,0,2" TextWrapping="Wrap" Width="420" FontSize="21.333" Foreground="{StaticResource PhoneBorderBrush}" />
            			</StackPanel>
            			<StackPanel Orientation="Horizontal" Margin="12,0,0,5">
            				<TextBlock Text="•" Foreground="{StaticResource PhoneBorderBrush}" Margin="7,0,-7,0" />
            				<TextBlock Text="Beliebig viele Orte speichern" Margin="15,0,0,2" TextWrapping="Wrap" Width="420" FontSize="21.333" Foreground="{StaticResource PhoneBorderBrush}" />
            			</StackPanel>
            		</StackPanel>
            	</ScrollViewer>
            </controls:PivotItem>

            <controls:PivotItem Header="Changelog">
                <ScrollViewer>
                    <StackPanel Margin="12,0,0,0">
                        <TextBlock Text="Version 2.3" FontSize="{StaticResource PhoneFontSizeExtraLarge}" Foreground="{StaticResource PhoneForegroundBrush}" FontFamily="Segoe WP Light" />
                        <Border Height="1" Background="{StaticResource PhoneForegroundBrush}" Padding="0" Margin="2,5,2,2" />
