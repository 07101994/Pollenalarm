	</phone:PhoneApplicationPage.Resources>

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot">
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,37,0,28">
            <StackPanel Orientation="Horizontal">
                <Border Width="64" Height="64" Margin="2,-19,0,-19" Background="{StaticResource PhoneForegroundBrush}">
                    <Border.OpacityMask>
                        <ImageBrush ImageSource="/Pollenalarm;component/Assets/Logo-173.png" />
                    </Border.OpacityMask>
                </Border>
                <TextBlock x:Name="ApplicationTitle" Text="POLLENALARM" Style="{StaticResource PhoneTextNormalStyle}" Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,12,0" />
            </StackPanel>            
        </StackPanel>
        
        <!--Pivot Control-->
        <controls:Pivot x:Name="pivot" Title=" " Margin="0,20,0,0" RenderTransformOrigin="0.5,0.5">
        	<controls:Pivot.RenderTransform>
        		<CompositeTransform/>
        	</controls:Pivot.RenderTransform>
            <!--Pivot item one-->
            <controls:PivotItem Header="Details">
                <StackPanel Margin="0,-13,0,0">
                    <StackPanel Orientation="Horizontal" Margin="13,0,0,0">
                        <Border x:Name="border" Width="150" Height="150" Background="{StaticResource PhoneAccentBrush}" Margin="0,12,0,0" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top">
                            <Border.RenderTransform>
                                <CompositeTransform/>
                            </Border.RenderTransform>
                            <Image x:Name="image" Source="/Pollenalarm;component/Assets/Logo-173.png" Width="150" Height="150" Margin="0" RenderTransformOrigin="0.5,0.5" >
                            	<Image.RenderTransform>
                            		<CompositeTransform/>
                            	</Image.RenderTransform>
                            </Image>
                        </Border>
                        <StackPanel Margin="10,0,0,0" Width="266">
                            <TextBlock x:Name="textBlock" Text="Pollenalarm" TextAlignment="Left" FontSize="44" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,-5" Width="266" FontFamily="Segoe WP" >
                            	<TextBlock.RenderTransform>
                            		<CompositeTransform/>
                            	</TextBlock.RenderTransform>
                            </TextBlock>
                            <TextBlock x:Name="textBlock1" Text="Detaillierte Polleninformationen für ganz Deutschland." Width="266" TextWrapping="Wrap" Foreground="{StaticResource PhoneBorderBrush}" FontSize="18" FontFamily="Segoe WP" RenderTransformOrigin="0.5,0.5" >
                            	<TextBlock.RenderTransform>
                            		<CompositeTransform/>
                            	</TextBlock.RenderTransform>
                            </TextBlock>
                            <TextBlock x:Name="textBlock2" Text="Version: 2.3" Margin="0,8,0,0" FontSize="18" RenderTransformOrigin="0.5,0.5" >
                            	<TextBlock.RenderTransform>
                            		<CompositeTransform/>
                            	</TextBlock.RenderTransform>
                            </TextBlock>
                            <TextBlock x:Name="textBlock3" Text="© 2014 Thepagedot" TextAlignment="Left" Margin="0,3,0,0" FontSize="18" Foreground="{StaticResource PhoneForegroundBrush}" RenderTransformOrigin="0.5,0.5" >
                            	<TextBlock.RenderTransform>
                            		<CompositeTransform/>
                            	</TextBlock.RenderTransform>
                            </TextBlock>
                        </StackPanel>                                                                        
                    </StackPanel>

                    <c4f:RoundButton Content="Auf Facebook besuchen" HorizontalAlignment="Left" Orientation="Horizontal" Margin="2,10,0,0" VerticalAlignment="Center" ImageSource="/Pollenalarm;component/Assets/Icons/appbar.facebook.png" Name="rbFacebook" Click="rbFacebook_Click" IsEnabled="True" ButtonHeight="60" ButtonWidth="60" Padding="0,3,0,0" FontSize="24" FontFamily="Segoe WP Semibold" RenderTransformOrigin="0.5,0.5" >
                    	<c4f:RoundButton.RenderTransform>
                    		<CompositeTransform/>
                    	</c4f:RoundButton.RenderTransform>
                    </c4f:RoundButton>

                    <RichTextBox FontFamily="Segoe WP" FontSize="22" Margin="0,0,0,0">
                        <Paragraph TextAlignment="Left">
                            <Run Text="Diese Windows Phone Anwendung wurde von" />
                            <Run Text="Thepagedot" Foreground="{StaticResource PhoneAccentBrush}" />
                            <Run Text="entwickelt." />
                        </Paragraph>                        
                    </RichTextBox>
                    <RichTextBox FontFamily="Segoe WP" FontSize="22" Margin="0,10,0,0">
                        <Paragraph TextAlignment="Left">
                            <Run Text="Sämliche Daten entstammen der Website der" />
                            <Run Text="Hexal AG" Foreground="{StaticResource PhoneAccentBrush}" />
                            <Run Text="und werden ohne Gewähr zur Verfügung gestellt." />
                        </Paragraph>
                    </RichTextBox>
                    <RichTextBox FontFamily="Segoe WP" FontSize="22" Margin="0,10,0,0">
                        <Paragraph TextAlignment="Left">
                            <Run Text="Die Hintergrundgrafik basiert auf einem Foto von" />
                            <Run Text="M. Großmann / pixelio.de" Foreground="{StaticResource PhoneAccentBrush}" />
                        </Paragraph>
                    </RichTextBox>
                    
                    <Border x:Name="border1" Background="{StaticResource PhoneForegroundBrush}" Width="180" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0" RenderTransformOrigin="0.5,0.5">
                    	<Border.RenderTransform>
                    		<CompositeTransform/>
                    	</Border.RenderTransform>
                        <Border.OpacityMask>
                            <ImageBrush ImageSource="/Pollenalarm;component/Assets/ThepagedotLogoS.png" Stretch="Uniform" />
                        </Border.OpacityMask>
                    </Border>
                </StackPanel>
            </controls:PivotItem>

            <!--Pivot item two-->
            <controls:PivotItem Header="Hilfe">
                <ScrollViewer>
                    <StackPanel>
                        <RichTextBox>
                            <Paragraph>
                                <Run Text="Generelle Belastung" Foreground="{StaticResource PhoneForegroundBrush}" FontSize="{StaticResource PhoneFontSizeExtraLarge}" FontFamily="Segoe WP Light" />
                            </Paragraph>
                            <Paragraph>
                                <Run Text="Die Belastung, die auf der Startseite für jeden Ort angezeigt wird ist individuell auf Sie zugeschnitten." >
                                	<Run.Foreground>
                                		<SolidColorBrush Color="{StaticResource PhoneBorderColor}"/>
                                	</Run.Foreground>
                                </Run>
                            </Paragraph>                            
                        </RichTextBox>
                        <StackPanel Margin="12,0">
                            <TextBlock Text="Der Wert errechnet sich aus der geringsten Belastung der Pollen, auf die Sie allergisch sind. Somit wird dort, die für Sie relevanteste Belastung angezeigt." Margin="0" TextWrapping="Wrap" >
                            	<TextBlock.Foreground>
                            		<SolidColorBrush Color="{StaticResource PhoneBorderColor}"/>
                            	</TextBlock.Foreground>
                            </TextBlock>
                            <Border Margin="0,12,0,10" Background="{StaticResource PhoneChromeBrush}">                            	
                                <Border Margin="2" >
                                	<Border.Background>
                                		<ImageBrush Stretch="UniformToFill" ImageSource="/Pollenalarm;component/Assets/Background/Background.png"/>
                                	</Border.Background>
									<Grid>
	                                    <Border Width="150" Height="150" Background="{StaticResource PhoneAccentBrush}" Margin="10,7,5,7" HorizontalAlignment="Left" BorderThickness="0">
	                                        <Grid Margin="0">
	                                            <Image Margin="0" Source="/Pollenalarm;component/Assets/Icons/positionMarkerPollen2.png" HorizontalAlignment="Right" VerticalAlignment="Top" Width="70"/>
	                                            <TextBlock Text="Belastung" Foreground="White" HorizontalAlignment="Left" FontSize="20" Margin="7,58,0,0" VerticalAlignment="Top" />
												
												<Border x:Name="barBorder" BorderBrush="White" BorderThickness="2" Height="19" Width="120" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="7,89,0,0">
		                    						<Border x:Name="concentrationBar" BorderBrush="Black" BorderThickness="0" Margin="2" Background="White" HorizontalAlignment="Left" Width="80"/>
		                    					</Border>

	                                            <TextBlock Text="BERLIN" Margin="7,0,0,2"  FontFamily="Segoe UI" VerticalAlignment="Bottom" Foreground="White" FontSize="25.333" FontWeight="SemiBold" />
	                                        </Grid>
	                                    </Border>
										<Image Source="pfeile2.png" Margin="-11,7,0,-3" />
									</Grid>
                                </Border>
                            </Border>
                        </StackPanel>

                        <RichTextBox Margin="0,40,0,0" Visibility="Collapsed">
                            <Paragraph>
                                <Run Text="Warum Kaufen?" Foreground="{StaticResource PhoneForegroundBrush}" FontSize="{StaticResource PhoneFontSizeExtraLarge}" FontFamily="Segoe WP Light" />
                            </Paragraph>
                            <Paragraph>
                            	<Paragraph.Foreground>
                            		<SolidColorBrush Color="{StaticResource PhoneBorderColor}"/>
                            	</Paragraph.Foreground>
                                <Run Text="Die kostenlose Testversion liefert derzeit die volle Funktionalität der kostenpflichtigen Vollversion." />
                            </Paragraph>
                            <Paragraph>
                            	<Paragraph.Foreground>
                            		<SolidColorBrush Color="{StaticResource PhoneBorderColor}"/>
                            	</Paragraph.Foreground>
                                <Run Text="Die kostenlose Version finanziert sich allerdings durch Werbeeinblendungen. Wenn diese Sie stören, kaufen Sie doch bitte die Vollversion." />
                            </Paragraph>
                        </RichTextBox>

                        <RichTextBox Margin="0,40,0,0">
                            <Paragraph>
                                <Run Text="Orte hinzufügen" Foreground="{StaticResource PhoneForegroundBrush}" FontSize="{StaticResource PhoneFontSizeExtraLarge}" FontFamily="Segoe WP Light" />                            
                            </Paragraph>
                            <Paragraph>
                            	<Paragraph.Foreground>
                            		<SolidColorBrush Color="{StaticResource PhoneBorderColor}"/>
                            	</Paragraph.Foreground>
                                <Run Text="Auf der Startseite werden Polleninformationen für Ihren aktuellen Standort angezeigt." />
                            </Paragraph>
                            <Paragraph>
                            	<Paragraph.Foreground>
                            		<SolidColorBrush Color="{StaticResource PhoneBorderColor}"/>
                            	</Paragraph.Foreground>
                                <Run Text="Um auch andere für Sie relevante Orte, wie zum Beispiel Ihren Arbeitsplatz im Auge zu behalten, können Sie diese der Startseite hinzufügen." />                            
                            </Paragraph>                        
                        </RichTextBox>
                        <Image Source="/Pollenalarm;component/Assets/Help/MainPageAppBar.png" Margin="12,12,12,0" />
                    
                        <RichTextBox Margin="0,40,0,0">
                            <Paragraph>
                                <Run Text="Pollenauswahl" Foreground="{StaticResource PhoneForegroundBrush}" FontSize="{StaticResource PhoneFontSizeExtraLarge}" FontFamily="Segoe WP Light" />
                            </Paragraph>
                            <Paragraph>
                            	<Paragraph.Foreground>
                            		<SolidColorBrush Color="{StaticResource PhoneBorderColor}"/>
                            	</Paragraph.Foreground>
                                <Run Text="Für eine bessere Übersicht bieten wir Ihnen die Möglichkeit in der Pollenauswahl nur die Pollen zu selektieren, auf die Sie allergisch reagieren." />
                            </Paragraph>
                            <Paragraph>
                            	<Paragraph.Foreground>
                            		<SolidColorBrush Color="{StaticResource PhoneBorderColor}"/>
                            	</Paragraph.Foreground>
                                <Run Text="So werden die angezeigten Polleninformationen für Sie Personalisiert." />
                                <LineBreak />
                                <Run Text="Darüber hinaus haben Sie in den Einstellungen die Möglichkeit, nur blühende Pollen anzuzeigen."/>
                            </Paragraph>
                        </RichTextBox>
                        <Border Margin="12,12,12,10" Background="{StaticResource PhoneChromeBrush}">
                            <Image Source="/Pollenalarm;component/Assets/Help/PollenSelectionexample2.png" Margin="2" />
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </controls:PivotItem>
            <controls:PivotItem x:Name="pivotBuy" Header="Kaufen">
            	<ScrollViewer>
            		<StackPanel>
            			<RichTextBox x:Name="tbkPromo" Visibility="Collapsed">
            				<Paragraph><Run Text="Sie verfügen über eine "/><Run FontWeight="Bold" Text="Promo-Lizens"/><Run Text=". Daher verfügen Sie über den vollen Funktionsumfang, ohne die App kaufen zu müssen!"/></Paragraph>
            			</RichTextBox>
            			<RichTextBox BorderThickness="0,10,0,0">
            				<Paragraph FontSize="24" FontFamily="Segoe WP SemiLight"><Paragraph.Foreground>
            						<SolidColorBrush Color="{StaticResource PhoneBorderColor}"/>
            					</Paragraph.Foreground><Run Text="Einige Funktionen dieser App sind in der kostenlosen Testversion "/><Run Text="nicht verfügbar">
            						<Run.Foreground>
            							<SolidColorBrush Color="{StaticResource PhoneContrastBackgroundColor}"/>
