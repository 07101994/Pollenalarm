    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="457*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="12,37,0,28">
            <StackPanel Orientation="Horizontal">
                <Border Width="64" Height="64" Margin="2,-19,0,-19" Background="{StaticResource PhoneForegroundBrush}">
                    <Border.OpacityMask>
                        <ImageBrush ImageSource="/Assets/Logo-173.png" />
                    </Border.OpacityMask>
                </Border>
                <TextBlock x:Name="ApplicationTitle" Text="POLLENALARM" Style="{StaticResource PhoneTextNormalStyle}" Height="Auto" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,12,0" />
            </StackPanel>
            <TextBlock x:Name="PageTitle" Text="Neuer Ort" Margin="9,-7,0,0" Style="{StaticResource PhoneTextTitle1Style}" />
        </StackPanel>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,-10,12,0" Grid.RowSpan="2">
            <StackPanel x:Name="stackPanel" RenderTransformOrigin="0.5,0.5">
            	<StackPanel.RenderTransform>
            		<CompositeTransform/>
            	</StackPanel.RenderTransform>
            	<StackPanel.Projection>
            		<PlaneProjection/>
            	</StackPanel.Projection>

                <ScrollViewer Margin="0,0,0,0">
                    <StackPanel>                                        
                        <!--Place's Name-->
                        <TextBlock Text="Name" Margin="12,0,0,0" FontSize="{StaticResource PhoneFontSizeMediumLarge}" />                        
                        <TextBox Margin="0,0,0,5" Name="tbxName" >
                            <TextBox.InputScope>
                                <InputScope>
                                    <InputScopeName NameValue="PersonalSurname" />
                                </InputScope>
                            </TextBox.InputScope>
                        </TextBox>

                            <!--Place's Plz-->
                        <TextBlock Text="Postleitzahl" Margin="12,0,0,0" FontSize="{StaticResource PhoneFontSizeMediumLarge}" />
                        <TextBox Name="tbxPlz">
                            <TextBox.InputScope>
                                <InputScope>
                                    <InputScopeName NameValue="Number" />
                                </InputScope>
                            </TextBox.InputScope>
                        </TextBox>
                    
                    </StackPanel>
                </ScrollViewer>
                <StackPanel Margin="12,0" VerticalAlignment="Bottom"></StackPanel>
                
            </StackPanel>
            
        </Grid>
        
        <Grid x:Name="AdPanel" Grid.Row="2" RenderTransformOrigin="0.5,0.5">
        	<Grid.RenderTransform>
        		<CompositeTransform/>
        	</Grid.RenderTransform>
            <!--Advertising is added in Code behind-->
        </Grid>

        <Grid Grid.RowSpan="3" Background="{StaticResource PhoneBackgroundBrush}" OpacityMask="#BE000000" Name="Overlay" Visibility="Collapsed" />

        <my1:Map Name="MapViewer" CredentialsProvider="Aq69-RXbmx-nbDdlZISg__ioXRQH29f2-jgseV9r1acfqU6jFyCWsPfjANiy4o76" Margin="12,-25,12,5" Height="0.1" IsEnabled="True" Grid.Row="1" VerticalAlignment="Top" Background="White" BorderBrush="White" />
        <StackPanel Grid.Row="1" Margin="0,240,0,0" Grid.RowSpan="2">
            <Button Content="Ort übernehmen" Padding="0,3,10,0" VerticalAlignment="Top" Name="btnApplyPlace" Visibility="Collapsed" Click="btnApplyPlace_Click" Height="85" Background="{StaticResource PhoneAccentBrush}" />
            <Button Content="Abbrechen" Padding="0,3,10,0" VerticalAlignment="Top" Grid.Row="1" Name="btnCancelPlace" Visibility="Collapsed" Click="btnCancelPlace_Click" Height="85" Background="{StaticResource PhoneAccentBrush}" />
            <CheckBox Content="Ort nicht mehr überprüfen" Grid.Row="1" VerticalAlignment="Top" Name="cbCheckPlace" Checked="cbCheckPlace_Checked" Visibility="Collapsed" Unchecked="cbCheckPlace_Unchecked" />
        </StackPanel>
        
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Background/PivotBackground2.png" Stretch="UniformToFill" x:Name="BackgroundImage" />
        </Grid.Background>
    </Grid>
 
    <!--ApplicationBar-->
    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar IsVisible="True" IsMenuEnabled="True">
            <shell:ApplicationBarIconButton IconUri="/Assets/ApplicationBar/appbar.save.rest.png" Text="Speichern" x:Name="appBarSave" Click="appBarSave_Click" />
            <shell:ApplicationBarIconButton IconUri="/Assets/ApplicationBar/appbar.cancel.rest.png" Text="Verwerfen" x:Name="appBarCancel" Click="appBarCancel_Click" />
            <shell:ApplicationBarIconButton IconUri="/Assets/ApplicationBar/appbar.location.round.png" Text="Aktuelle Position" x:Name="appBarLocation" Click="appBarLocation_Click" />
            <shell:ApplicationBarIconButton IconUri="/Assets/ApplicationBar/appbar.feature.search.rest.png" Text="Suche" x:Name="appBarSearch" Click="appBarSearch_Click" />
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

</phone:PhoneApplicationPage>
